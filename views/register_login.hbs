<div class="container">
    <div class="row justify-content-evenly">
        <div class="col-5 card m-1 inline">
            <div class="card-body">
                <h1 class="card-title">Register</h1>

                <form action="/register" method="POST">
                    <div class="mb-3">
                        <label for="userName" class="form-label">User Name:</label>
                        <input type="text" class="form-control" id="userName" name="userName"
                            aria-describedby="userName" placeholder="Enter User Name" pattern="[a-zA-Z0-9]{4,20}"
                            title="Only alphanumeric characters. Length: [4, 20] characters" required>
                    </div>

                    <div class="mb-3">
                        <label for="userName" class="form-label">User Id:</label>
                        <input type="text" class="form-control" id="userName" name="userId" placeholder="Enter User Id"
                            pattern="[a-z0-9]{4,20}"
                            title="Only lowercase letters and digits. Length: [4, 20] characters" required>
                        <small id="idHelp" class="form-text text-muted">
                            User Id is recommended to be some short and easy to remember.
                            Only lowercase letters and numbers are allowed.
                        </small>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" class="form-control" id="password" name="password"
                            placeholder="Enter Your Password" pattern="[a-zA-Z0-9]{4,20}"
                            title="Only alphanumeric characters. Length: [4, 20] characters"
                            required>
                        <small id="passwordHelp" class="form-text text-muted">
                            Don't share your password with anyone.
                            Only alphanumeric characters. Length: [4, 20] characters.
                        </small>
                    </div>

                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
                {{#if already_exists}}
                <div class="alert alert-danger mt-4" role="alert">
                    User with specified userID already exists!
                </div>
                {{/if}}
            </div>
        </div>

        <div class="col-5 card m-1 inline">
            <div class="card-body">
                <h1 class="card-title">Login</h1>

                <form action="/login" method="POST">
                    <div class="mb-3">
                        <label for="userId" class="form-label">User Id:</label>
                        <input type="text" class="form-control" id="userId" name="userId" aria-describedby="userId"
                            placeholder="Enter Your User Id" pattern="[a-z0-9]{4,20}"
                            title="Only lowercase letters and digits. Length: [4, 20] characters" required>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" class="form-control" id="password" name="password"
                            placeholder="Enter Your Password" pattern="[a-zA-Z0-9]{4,20}"
                            title="Only alphanumeric characters. Length: [4, 20] characters"
                            required>
                    </div>

                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
                {{#if unauthenticated}}
                <div class="alert alert-danger mt-4" role="alert">
                    Password or userID is wrong.
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>