<h1>Group Details</h1>

{{#if group}}
<table class="table table-bordered">
    <tr>
        <td>Name:</td>
        <td>{{this.name}}</td>
    </tr>
    <tr>
        <td>Description:</td>
        <td>{{this.description}}</td>
    </tr>
    <tr>
        <td>Games:</td>
        <td>
            {{#each this.games}}
            <p>{{this}}</p>
            {{/each}}
        </td>
    </tr>
</table>
{{/if}}

{{#if error}}
<p><strong>ERROR:</strong> {{error}}</p>
{{/if}}