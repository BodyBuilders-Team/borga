<h1>{{header}}</h1>

{{#if group}}
<table class="table table-bordered">
    <tr class="common-row">
        <td>Name:</td>
        <td>{{name}}</td>
    </tr>
    <tr>
        <td>Description:</td>
        <td>{{description}}</td>
    </tr>
    <tr class="common-row">
        <td>Games:</td>
        <td>
            {{#each games}}
            <p>{{this}}</p>
            {{/each}}
        </td>
    </tr>
</table>
{{/if}}