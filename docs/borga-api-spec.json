    "/user/{userId}/groups/{groupId}/games/{gameId}": {
      "delete": {
        "tags": [
          "user"
        ],
        "summary": "Removes a game from a group.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "The user ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "groupId",
            "in": "path",
            "description": "The group ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "gameId",
            "in": "path",
            "description": "The ID of the game to remove from the group",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "example": {
                  "Removed game": {
                    "id": "OIXt3DmJU0",
                    "name": "Catan",
                    "url": "https://www.boardgameatlas.com/game/OIXt3DmJU0/catan",
                    "image": "https://s3-us-west-1.amazonaws.com/5cc.images/games/uploaded/1629324722072.jpg",
